package domain;

public class Drone {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

	private String id;
	private Battery battery;
	//capacity measured in weight units
	private int capacity;
	//charging rate measured in BU per minutes
	private int chargingRate;
	
	public Drone(String id, Battery battery, int capacity){
		setId(id);
		setBattery(battery);
		setCapacity(capacity);
		chargingRate=battery.getChargingRate();
	}
	
	public String getId() {
		return id;
	}
	public void setId(String id) {
		this.id = id;
	}
	public Battery getBattery() {
		return battery;
	}
	public void setBattery(Battery battery) {
		this.battery = battery;
	}
	public int getCapacity() {
		return capacity;
	}
	public void setCapacity(int capacity) {
		this.capacity = capacity;
	}
	public int getChargingRate() {
		return chargingRate;
	}
	public void setChargingRate(int chargingRate) {
		this.chargingRate = chargingRate;
	}
	
		
}
